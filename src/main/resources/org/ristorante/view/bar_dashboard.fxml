<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.ristorante.controller.BarController">

    <children>
        <fx:include source="components/header.fxml" />

        <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane>
                    <children>
                        <fx:include fx:id="orderList" source="components/order_list_view.fxml"
                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
                </AnchorPane>

                <AnchorPane>
                    <children>
                        <fx:include fx:id="orderDetail" source="components/order_detail_view.fxml"
                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</VBox>