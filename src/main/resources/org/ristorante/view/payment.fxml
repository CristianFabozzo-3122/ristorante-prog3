<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ristorante.controller.PaymentController">

    <center>
        <SplitPane dividerPositions="0.3">

            <AnchorPane>
                <children>
                    <fx:include fx:id="orderList" source="components/order_list_view.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>

            <AnchorPane>
                <children>
                    <fx:include fx:id="orderDetail" source="components/order_detail_view.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>

        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" prefHeight="150" spacing="60" style="-fx-padding: 30; -fx-background-color: #f4f4f4;">
            <children>
                <Button fx:id="cashButton" onAction="#handleCashButton" prefHeight="80" prefWidth="200" text="Contanti" />
                <Button fx:id="cardButton" onAction="#handleCardButton" prefHeight="80" prefWidth="200" text="Carta" />
                <Button fx:id="atmButton" onAction="#handleAtmButton" prefHeight="80" prefWidth="200" text="Bancomat" />
            </children>
        </HBox>
    </bottom>
   <top>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" text="torna indietro" BorderPane.alignment="TOP_LEFT" />
   </top>

</BorderPane>
