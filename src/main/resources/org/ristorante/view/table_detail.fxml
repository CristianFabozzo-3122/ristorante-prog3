<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ristorante.controller.TableDetailController">
   <children>
      <VBox layoutX="250.0" layoutY="100.0" prefHeight="200.0" prefWidth="100.0" spacing="30.0">
         <children>
            <TextField fx:id="name" alignment="CENTER" promptText="Nome Tavolo" />
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" layoutX="391.0" layoutY="100.0" prefHeight="200.0" spacing="30.0">
         <children>
            <Button fx:id="takeOrderButton" mnemonicParsing="false" onAction="#handleTakeOrder" text="prendi ordine" />
            <Button fx:id="updateTableButton" mnemonicParsing="false" onAction="#handleUpdateButton" text="aggiorna tavolo" />
            <Button fx:id="viewOrderButton" mnemonicParsing="false" onAction="#handleViewOrder" text="visualizza ordini" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteButton" text="rimuovi tavolo" />
         </children>
      </VBox>
      <Button fx:id="backButton" layoutX="39.0" layoutY="65.0" mnemonicParsing="false" onAction="#handleBackButton" text="indietro" />
   </children>
</AnchorPane>
